<section class = "top-page-container">
    <h1 class = "top-heading">Books</h1>
    
    <!--destroyのサクセスメッセージ-->
    <div class = "success-message-container">
        <% if flash[:notice] %>
            <%= flash[:notice] %>
        <% end %>
    </div>
    
    
   
    
    <table class = "books-table">
        <tr>
            <th class = "books-table-cell1">Title</th>
            <th class = "books-table-cell2">Body</th>
            
        </tr>
        
        <% @books.each do |book| %>
            <tr>
                <td class = "books-table-cell1 to-omit"><%= book.title %></td>
                <td class = "books-table-cell2 to-omit"><%= book.body %></td>
                <td class = "books-table-cell3"><%= link_to 'Show', book_path(book) %></td>
                <td class = "books-table-cell3"><%= link_to 'Edit', edit_book_path(book) %></td>
                <td class = "books-table-cell3"><%= link_to 'Destroy', book_path(book), method: :delete %></td>
            </tr>
        <%end%>
        
    </table>
</section>


 

<section class = "top-page-container">
    <h1 style = "font-size: 19.5px">New Book</h1>
    
    <!--バリデーションチェックのエラー文の表示記述-->
 
    <div class = "error-message-container">
        <%= render('layouts/error_messages') %>
    </div>
    
    <%= form_with model: @book, url:books_path, local:true do |f| %>
        <div class = "input-area">
            <%= f.label :title, 'Title' %><br>
            <%= f.text_field :title %>
        </div>
        
        <div class = "input-area">
            <%= f.label :body, 'Body' %><br>
            <%= f.text_area :body %>
        </div>
        
        <div class = "input-area">
            <%= f.submit 'Create Book' %>
        </div>
        
    <% end %>
</section>